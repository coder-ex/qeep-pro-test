{% extends 'default.html.twig' %}

{% block title %}{{ meta.title }}{% endblock %}

{% block styles %}
    <script src="js/e2d5a00791bce9a01f99bc6fd613a39d.js"></script>
{% endblock %}

{% block content %}
    <br>
    <div class="container top-indent-header">
        <div class="col-lg-8">
            <form class="frmpanelka1" action="/filter" method="post" id="frm-edit">
                <br>
                <hr>
                <div class="form-group">
                    <div class="row justify-content-center row-cols-2">
                        <div class="col">
                            <div class="badge-primary text-center" >
                                {% if list|length > 0 %}
                                    Изменить шаблон
                                {% else %}
                                    Добавить шаблон
                                {% endif %}
                            </div>
                            <input class="form-control form-control-sm" name="add-key" id="class" value="">
                        </div>
                        <div class="col">
                            <div class="badge-primary text-center" >
                                {% if list|length > 0 %}
                                    Изменить диапазон
                                {% else %}
                                    Добавить диапазон
                                {% endif %}
                            </div>
                            <input class="form-control form-control-sm" type="name" name="add-depth" id="name" value="">
                        </div>
                    </div>
                    <br>
                    <div class="row justify-content-center row-cols-2">
                        <div class="col">
                            <div class="form-check">
                                {% if list|length > 0 %}
                                    <input type="checkbox" class="form-check-input" name="active" id="activeCheck">
                                    <label class="form-check-label" for="activeCheck">активный</label>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col">
                            <select id="select">
                                <option class="cat" value="" hidden disabled selected>выбрать</option>
                                {% for val in list %}
                                    <option class="cat">{{ val.keyword }}</option>
                                    <option class="name" hidden="true">{{ val.depth }}</option>
                                    {% if val.id == data.filter.id %}
                                        <option class="activeCheck" hidden="true">{{ val.id }}</option>
                                    {% else %}
                                        <option class="activeCheck" hidden="true"></option>
                                    {% endif %}
                                {% endfor %}
                                <div class="clearfix"></div>
                            </select>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="form-group">
                    <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                        <div class="btn-group mr-2" role="group" aria-label="First group">
                            {% if list|length > 0 %}
                                <button type="button" class="btn btn-success btn-sm" id="btn-edit">Изменить</button>
                            {% else %}
                                <button type="button" class="btn btn-success btn-sm" id="btn-edit">Добавить</button>
                            {% endif %}
                        </div>
                        <div class="btn-group mr-2" role="group" aria-label="Second group">
                            {% if list|length > 0 %}
                                <button type="button" class="btn btn-danger btn-sm" id="btn-delete">Удалить</button>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <hr>
                <div class="form-group">
                    <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                        <div class="btn-group mr-2" role="group" aria-label="Second group">
                            <button type="button" class="btn btn-outline-danger btn-sm" id="btn-updb">Обновить базу</button>
                        </div>
                    </div>
                </div>
            </form>
            <div class="form-group" style="width: 520px;"><div id="errorMsg"></div></div>
        </div>
    </div>
{% endblock %}